<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html>
<html b:css='false' b:js='true' {{attr root}}>
<b:include name='m:root'/>
<head>
  <title>
    <data:view.title.escaped/>
  </title>
  <b:include name='m:head'/>
  {{!-- Default skin --}}
  {{> skin}}
  {{!-- Default markups --}}
  {{> markups}}
  {{!-- Generate responsive image styles --}}
  <b:if cond='not data:view.isPreview'>
    <b:include data='{ selector: ".header", image: data:skin.vars.body_background.image }' name='responsiveImageStyle'/>
  </b:if>
</head>

<body>
  <b:include name='@kind'/>
  {{!-- Offcanvas --}}
  {{> offcanvas}}
  <b:tag cond='data:view.isLayoutMode' name='div' class='layout-section'>
    {{!-- Header --}}
    <header class='header'>
      {{> header}}
    </header>
    {{!-- Content --}}
    <div class='template container'>
      <main class='main'>
        <b:section id='content'>
          <b:widget id='Blog1' type='Blog' version='2' locked='true'/>
        </b:section>
      </main>
      {{!-- footer --}}
      <footer class='footer'>
        {{> footer}}
      </footer>
    </div>
  </b:tag>
</body>
</html>
