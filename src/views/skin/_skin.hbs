<b:if cond="!data:view.isLayoutMode">
  {{!-- Skin (for Customization Mode) --}}
  <b:skin><![CDATA[
    /*!
      * Name      : {{name}}
      * Version   : {{version}}
      * License   : {{license}}
      *//*!

    Settings
    =====================
    {{> Settings}}

    Customization
    =====================
    {{> Background}}
    {{> Color}}
    {{> Font}}

    Hacks
    =====================
    {{> Hack}}

    All styles
    =====================*/

    {{asset '/dist/css/main.min.css'}}
    /*
    Your custom styles
    =====================*/
  ]]></b:skin>
  <b:else/>
  {{!-- Template skin (for Layout Mode) --}}
  <b:template-skin><![CDATA[
    {{asset '/dist/css/admin.min.css'}}
  ]]></b:template-skin>
</b:if>
