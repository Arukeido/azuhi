Variables b:skin
@author zkreations
@docs https://bloggercode-blogconnexion.blogspot.com/2014/06/tag-b-skin-b-template-skin.html
--}}
<b:if cond="!data:view.isLayoutMode">
  {{!-- Skin (for Customization Mode) --}}
  <b:skin><![CDATA[
    /*!
      * Name      : {{name}}
      * Version   : {{version}}
      * License   : {{license}}
      *//*!

    Settings
    =====================
    # Formspree.io form ID.
    {{variable "c.formspree"}}

    # HD Favicon URL.
    {{variable "c.favicon"}}

    # Url of default Open Graph image.
    {{variable "c.ogImage"}}

    # Url of default avatar.
    {{variable "c.avatar" value="https://lh3.googleusercontent.com/a/default-user"}}

    # Image parameters: https://zkreations.com/2022/11/parametros-de-imagenes-de-blogger.html
    {{variable "c.imageParams" value="rw-l80-e30"}}

    # Translatable strings.
    {{variable "t.reply" value="Reply"}}
    {{variable "t.delete" value="Delete"}}

    Customization
    =====================
    # Mandatory variable to enable dynamic layout
    {{variable "keycolor" type="color" value="#2196f3"}}
    
    {{> Background}}
    {{> Color}}
    {{> Font}}
    {{> Hack}}

    All styles
    =====================*/

    {{asset '/dist/css/main.min.css'}}
    /*
    Your custom styles
    =====================*/
  ]]></b:skin>
<b:else/>
  {{!-- Template skin (for Layout Mode) --}}
  <b:template-skin><![CDATA[
    {{asset '/dist/css/admin.min.css'}}
  ]]></b:template-skin>
</b:if>
